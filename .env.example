# Kalshi API
KALSHI_API_KEY_ID=your-api-key-id
KALSHI_PRIVATE_KEY_PATH=./kalshi-key.pem

# Trading Mode (controls everything automatically):
#   demo       = Demo API + paper trading (zero risk, validate everything works)
#   small_live = Production API + real money, tiny position sizes (5-10 contracts)
#   full_live  = Production API + full position sizes from spec
TRADING_MODE=demo

# You can override these if TRADING_MODE doesn't set them how you want:
# KALSHI_BASE_URL=https://demo-api.kalshi.co
# KALSHI_WS_URL=wss://demo-api.kalshi.co/trade-api/ws/v2
# PAPER_TRADING=true

# External price feeds
BINANCE_WS_URL=wss://stream.binance.com:9443/ws

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/bot.log
